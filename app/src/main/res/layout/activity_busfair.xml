<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_100"
    tools:context=".busfair">


<androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:stretchColumns="*"
                android:padding="6dp">

                <!-- HEADER -->
                <TableRow android:background="#1565C0">
                    <TextView android:text="From / To" android:textColor="@android:color/white"
                        android:textStyle="bold" android:padding="10dp"/>

                    <TextView android:text="Kuril" android:textColor="@android:color/white"
                        android:textStyle="bold" android:padding="10dp"/>

                    <TextView android:text="Notun Bazar" android:textColor="@android:color/white"
                        android:textStyle="bold" android:padding="10dp"/>

                    <TextView android:text="Badda" android:textColor="@android:color/white"
                        android:textStyle="bold" android:padding="10dp"/>

                    <TextView android:text="Rampura" android:textColor="@android:color/white"
                        android:textStyle="bold" android:padding="10dp"/>

                    <TextView android:text="Hatirjheel" android:textColor="@android:color/white"
                        android:textStyle="bold" android:padding="10dp"/>
                </TableRow>

                <!-- Kuril -->
                <TableRow android:background="#E3F2FD">
                    <TextView android:text="Kuril" android:textStyle="bold"
                        android:background="#64B5F6" android:textColor="@android:color/white"
                        android:padding="10dp"/>
                    <TextView android:text="0" android:padding="10dp"/>
                    <TextView android:text="10" android:padding="10dp"/>
                    <TextView android:text="20" android:padding="10dp"/>
                    <TextView android:text="30" android:padding="10dp"/>
                    <TextView android:text="40" android:padding="10dp"/>
                </TableRow>

                <!-- Notun Bazar -->
                <TableRow android:background="#F5F9FF">
                    <TextView android:text="Notun Bazar" android:textStyle="bold"
                        android:background="#64B5F6" android:textColor="@android:color/white"
                        android:padding="10dp"/>
                    <TextView android:text="10" android:padding="10dp"/>
                    <TextView android:text="0" android:padding="10dp"/>
                    <TextView android:text="10" android:padding="10dp"/>
                    <TextView android:text="20" android:padding="10dp"/>
                    <TextView android:text="30" android:padding="10dp"/>
                </TableRow>

                <!-- Badda -->
                <TableRow android:background="#E3F2FD">
                    <TextView android:text="Badda" android:textStyle="bold"
                        android:background="#64B5F6" android:textColor="@android:color/white"
                        android:padding="10dp"/>
                    <TextView android:text="20" android:padding="10dp"/>
                    <TextView android:text="10" android:padding="10dp"/>
                    <TextView android:text="0" android:padding="10dp"/>
                    <TextView android:text="10" android:padding="10dp"/>
                    <TextView android:text="20" android:padding="10dp"/>
                </TableRow>

                <!-- Rampura -->
                <TableRow android:background="#F5F9FF">
                    <TextView android:text="Rampura" android:textStyle="bold"
                        android:background="#64B5F6" android:textColor="@android:color/white"
                        android:padding="10dp"/>
                    <TextView android:text="30" android:padding="10dp"/>
                    <TextView android:text="20" android:padding="10dp"/>
                    <TextView android:text="10" android:padding="10dp"/>
                    <TextView android:text="0" android:padding="10dp"/>
                    <TextView android:text="10" android:padding="10dp"/>
                </TableRow>

                <!-- Hatirjheel -->
                <TableRow android:background="#E3F2FD">
                    <TextView android:text="Hatirjheel" android:textStyle="bold"
                        android:background="#64B5F6" android:textColor="@android:color/white"
                        android:padding="10dp"/>
                    <TextView android:text="40" android:padding="10dp"/>
                    <TextView android:text="30" android:padding="10dp"/>
                    <TextView android:text="20" android:padding="10dp"/>
                    <TextView android:text="10" android:padding="10dp"/>
                    <TextView android:text="0" android:padding="10dp"/>
                </TableRow>

            </TableLayout>
        </HorizontalScrollView>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
