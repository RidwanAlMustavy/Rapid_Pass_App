                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:padding="10dp"/>
                    <TextView
                        android:text="Market Name"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:padding="10dp"/>
                    <TextView
                        android:text="Location"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:padding="10dp"/>
                </TableRow>

                <!-- ROWS -->
                <TableRow android:background="#E3F2FD">
