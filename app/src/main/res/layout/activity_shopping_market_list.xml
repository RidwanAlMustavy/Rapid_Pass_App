                </TableRow>

                <TableRow android:background="#E3F2FD">
                    <TextView android:text="5" android:padding="10dp"/>
                    <TextView android:text="Apple Store" android:padding="10dp"/>
                    <TextView android:text="Jamuna Future Park" android:padding="10dp"/>
                </TableRow>

                <TableRow android:background="#F5F9FF">
                    <TextView android:text="6" android:padding="10dp"/>
                    <TextView android:text="Clothes Store" android:padding="10dp"/>
                    <TextView android:text="Mirpur-10" android:padding="10dp"/>
                </TableRow>

                <TableRow android:background="#E3F2FD">
                    <TextView android:text="7" android:padding="10dp"/>
