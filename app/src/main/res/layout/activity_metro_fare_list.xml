<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_100"
    tools:context=".MetroFareList">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Horizontal scroll for wide table -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:background="@color/white"
                android:padding="5dp"
                >

                <!-- Header Row -->
                <TableRow
                    android:layout_width="475dp"
                    android:layout_height="81dp"
                    android:background="@color/teal_700"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="102dp"
                        android:padding="8dp"
                        android:text="Station"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:padding="8dp"
                        android:text="Uttora North"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:padding="8dp"
                        android:text="Mirpur-10"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:padding="8dp"
                        android:text="Agargawo"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="83dp"
                        android:layout_height="58dp"
                        android:padding="8dp"
                        android:text="Motijil"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:padding="8dp"
                        android:text="Jatrabari"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="86dp"
                        android:padding="8dp"
                        android:text="Damra"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:padding="8dp"
                        android:text="Narayanganj"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />
                </TableRow>

                <!-- Data Rows -->
                <TableRow android:background="@color/white" android:padding="8dp">
                    <TextView android:text="Uttora North" android:background="@color/teal_200" android:textColor="@color/white" android:padding="8dp"/>
                    <TextView android:text="0" android:padding="8dp"/>
                    <TextView android:text="10" android:padding="8dp"/>
                    <TextView android:text="20" android:padding="8dp"/>
                    <TextView android:text="40" android:padding="8dp"/>
                    <TextView android:text="50" android:padding="8dp"/>
                    <TextView android:text="60" android:padding="8dp"/>
                    <TextView android:text="70" android:padding="8dp"/>
                </TableRow>

                <TableRow android:background="@color/white" android:padding="8dp">
                    <TextView android:text="Mirpur-10" android:background="@color/teal_200" android:textColor="@color/white" android:padding="8dp"/>
                    <TextView android:text="10" android:padding="8dp"/>
                    <TextView android:text="0" android:padding="8dp"/>
                    <TextView android:text="10" android:padding="8dp"/>
                    <TextView android:text="30" android:padding="8dp"/>
                    <TextView android:text="40" android:padding="8dp"/>
                    <TextView android:text="50" android:padding="8dp"/>
                    <TextView android:text="60" android:padding="8dp"/>
                </TableRow>

                <TableRow android:background="@color/white" android:padding="8dp">
                    <TextView android:text="Agargawo" android:background="@color/teal_200" android:textColor="@color/white" android:padding="8dp"/>
                    <TextView android:text="20" android:padding="8dp"/>
                    <TextView android:text="10" android:padding="8dp"/>
                    <TextView android:text="0" android:padding="8dp"/>
                    <TextView android:text="10" android:padding="8dp"/>
                    <TextView android:text="30" android:padding="8dp"/>
                    <TextView android:text="40" android:padding="8dp"/>
                    <TextView android:text="50" android:padding="8dp"/>
                </TableRow>

                <TableRow android:background="@color/white" android:padding="8dp">
                    <TextView android:text="Motijil" android:background="@color/teal_200" android:textColor="@color/white" android:padding="8dp"/>
                    <TextView android:text="40" android:padding="8dp"/>
                    <TextView android:text="30" android:padding="8dp"/>
                    <TextView android:text="10" android:padding="8dp"/>
                    <TextView android:text="0" android:padding="8dp"/>
                    <TextView android:text="20" android:padding="8dp"/>
                    <TextView android:text="30" android:padding="8dp"/>
                    <TextView android:text="40" android:padding="8dp"/>
                </TableRow>

                <TableRow android:background="@color/white" android:padding="8dp">
                    <TextView android:text="Jatrabari" android:background="@color/teal_200" android:textColor="@color/white" android:padding="8dp"/>
                    <TextView android:text="50" android:padding="8dp"/>
                    <TextView android:text="40" android:padding="8dp"/>
                    <TextView android:text="30" android:padding="8dp"/>
                    <TextView android:text="20" android:padding="8dp"/>
                    <TextView android:text="0" android:padding="8dp"/>
                    <TextView android:text="10" android:padding="8dp"/>
                    <TextView android:text="30" android:padding="8dp"/>
                </TableRow>

                <TableRow android:background="@color/white" android:padding="8dp">
                    <TextView android:text="Damra" android:background="@color/teal_200" android:textColor="@color/white" android:padding="8dp"/>
                    <TextView android:text="60" android:padding="8dp"/>
                    <TextView android:text="50" android:padding="8dp"/>
                    <TextView android:text="40" android:padding="8dp"/>
                    <TextView android:text="30" android:padding="8dp"/>
                    <TextView android:text="10" android:padding="8dp"/>
                    <TextView android:text="0" android:padding="8dp"/>
                    <TextView android:text="20" android:padding="8dp"/>
                </TableRow>

                <TableRow
                    android:layout_width="495dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="8dp">

                    <TextView
                        android:background="@color/teal_200"
                        android:padding="8dp"
                        android:text="Narayanganj"
                        android:textColor="@color/white" />

                    <TextView
                        android:padding="8dp"
                        android:text="70" />

                    <TextView
                        android:padding="8dp"
                        android:text="60" />

                    <TextView
                        android:padding="8dp"
                        android:text="50" />

                    <TextView
                        android:padding="8dp"
                        android:text="40" />

                    <TextView
                        android:padding="8dp"
                        android:text="30" />

                    <TextView
                        android:padding="8dp"
                        android:text="20" />

                    <TextView
                        android:padding="8dp"
                        android:text="0" />
                </TableRow>

            </TableLayout>
        </HorizontalScrollView>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
